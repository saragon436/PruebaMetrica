@model IEnumerable<EntidadBancaria.UI.MVC.Models.SucursalViewModel>
@{
    ViewBag.Title = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SUCURSALES</h2>
<div>
    <p>
        @Html.ActionLink("Nueva Sucursal", "Editar")
    </p>
    <div>
        @using (Html.BeginForm("Listar", "Sucursal", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-10">
                    @Html.Label("IdBanco", "BANCO", new { Class = "control-label" })
                    @Html.DropDownList("IdBanco", ViewBag.Bancos as SelectList, "--Seleccione--", new { Class = "form-control input-sm"})						
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-3">
                    <input type="submit" value="Buscar" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
    <table class="table">
        <tr>
            <th>NOMBRE</th>
            <th>DIRECCION</th>
            <th>FECHA DE REGISTRO</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Nombre
                </td>
                <td>
                    @item.Direccion
                </td>
                <td>
                    @item.FechaDeRegistro
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>
